                <Image Source="Icon\invoice.png" Width="18" Height="18"></Image>
                <TextBlock>Modificar configuracion de factura electronica</TextBlock>
            </DockPanel>
        </Button>
        <CheckBox x:Name="checkBox" Content="Verificar que exista la factura global mensual del mes anteriorantes de poder continuar facturando." HorizontalAlignment="Left" Margin="10,475,0,0" VerticalAlignment="Top" Width="542"/>
        <CheckBox x:Name="checkBox1" Content="Enviar automaticamente las facturas al cliente cuando tenga correo electronico asignado." HorizontalAlignment="Left" Margin="10,495,0,0" VerticalAlignment="Top"/>


    </Grid>
