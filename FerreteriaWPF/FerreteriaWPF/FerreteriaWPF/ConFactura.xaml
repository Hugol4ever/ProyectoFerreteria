        xmlns:local="clr-namespace:FerreteriaWPF"
        mc:Ignorable="d"
        Title="ConFactura" Height="577.5" Width="800" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Background="White">
    <Grid HorizontalAlignment="Center">
        <Rectangle Fill="#FFCBCACA" HorizontalAlignment="Left" Height="156" Margin="0,80,0,0" Stroke="#FFCBCACA" VerticalAlignment="Top" Width="794"/>
        <Label x:Name="label" Content="FACTURA ELECTRONICA" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="24" FontWeight="Bold" Foreground="White" Width="794" Background="#FF1C089C"/>
        <Label x:Name="label1" Content="Timbres disponibles de Francisco:" Margin="10,140,582,0" VerticalAlignment="Top" Height="40" HorizontalAlignment="Center" RenderTransformOrigin="0.742,0.474" Width="202"/>
        <Label x:Name="label2" Content="0" Margin="217,110,26,0" VerticalAlignment="Top" FontSize="60" RenderTransformOrigin="0.655,0.578"/>
        <Rectangle Fill="#FFCBCACA" HorizontalAlignment="Left" Height="156" Margin="0,253,0,0" Stroke="#FFCBCACA" VerticalAlignment="Top" Width="794"/>
        <Label x:Name="label3" Content="Timbres disponibles de Luis:" Margin="10,310,582,0" VerticalAlignment="Top" Height="40" HorizontalAlignment="Center" RenderTransformOrigin="0.742,0.474" Width="202"/>
        <Label x:Name="label4" Content="0" Margin="217,280,26,0" VerticalAlignment="Top" FontSize="60" RenderTransformOrigin="0.655,0.578"/>
        <Button x:Name="button"  HorizontalAlignment="Left" Margin="10,425,0,0" VerticalAlignment="Top" Width="294" Height="31" Click="button_Click">
