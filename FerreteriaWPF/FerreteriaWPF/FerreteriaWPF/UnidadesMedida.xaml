        <CheckBox x:Name="checkBox5" Content="PIEZA" HorizontalAlignment="Left" Margin="21,245,0,0" VerticalAlignment="Top"/>
        <Button x:Name="button"  HorizontalAlignment="Left" Margin="616,291,0,0" VerticalAlignment="Top" Width="122" BorderBrush="#FFDDDDDD">
